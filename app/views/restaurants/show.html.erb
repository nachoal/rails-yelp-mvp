<div class="container">
  <h2><%= @restaurant.name %></h2>
  <h3>Address: <%= @restaurant.address %></h3>
  <h3>Phone Number: <%= @restaurant.phone_number %></h3>
  <h3>Category: <%= @restaurant.category %></h3>
</div>
<div class="container">
  <h2>Reviews for this restaurant:</h2>
  <% @reviews.each do |review| %>
    <%= review.content %>
  <% end %>
  <hr>
  <%= link_to("Add a new review", "/restaurants/#{params[:id]}/reviews/new" ) %>
</div>